<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fiche_evaluation_report">
        <t t-call="web.basic_layout">
            <t t-call="ressource_humaine.report_header_custom"/>
            <div class="page">
                <div class="row">
                    <div style="float:left;font-size : 20px;">
                        <p>
                            <strong>
                                <!--                                <span t-field="docs.company_id.name"/>-->
                            </strong>
                        </p>
                    </div>
                    <br/>
                    <br/>
                    <strong>
                        <div style="font-size: 20px;text-align: right;">
                            <span style="display: inline-block;margin-left: 400px;">
                                المدرسة الوطنية للإدارة
                            </span>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                الأمانة العامة
                            </span>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                مصلحة تسيير الموارد البشرية
                            </span>
                        </div>
                        <br/>
                        <br/>
                    </strong>
                </div>
                <br/>
                <br/>
                <div style="text-align:center;font-size: 30px">
                    <strong>
                        <span t-esc="employee_evaluee.exercice"/>
                        <span>إسـتمارة التنقيط لسنة</span>
                    </strong>
                </div>
                <br/>
                <div class="row" style="margin:30;">
                    <table style="width: 100%;">
                        <thead>
                            <tr>
                                <th style="border:2px solid black;vertical-align:middle;text-align:right;font-size:18px;padding-right: 10px;">
                                    <span>الرتبة :</span>
                                    <span t-esc="employee_evaluee.grade_id.intitule_grade"/>
                                    <br/>
                                    <span>المنصب :</span>
                                    <span t-esc="employee_info.job_id.name"/>
                                    <br/>
                                    <span>الدرجة :</span>
                                    <span t-esc="employee_evaluee.echelon_id.intitule"/>
                                    <br/>
                                    <span>تاريخ أخر ترقية :</span>
                                    <span t-esc="employee_info.date_grade"/>
                                    <br/>
                                    <span>المدة :</span>
                                    <span t-esc="employee_info.promotion_lines[-1].duree"/>
                                </th>
                                <th style="border:2px solid black;vertical-align:middle;text-align:right;font-size:18px;padding-right: 10px;">
                                    <span>اللقب :</span>
                                    <span t-esc="employee_info.nom_ar"/>
                                    <br/>
                                    <span>إلاسم :</span>
                                    <span t-esc="employee_info.prenom_ar"/>
                                    <br/>
                                    <span>تاريخ الميلاد :</span>
                                    <span t-esc="employee_info.birthday"/>
                                    <br/>
                                    <span>الحالة العائلية :</span>
                                    <t t-if="employee_info.marital=='single'">
                                        <span>أعزب</span>
                                    </t>
                                    <t t-if="employee_info.marital=='married'">
                                        <span>متزوّج</span>
                                    </t>
                                    <t t-if="employee_info.marital=='widower'">
                                        <span>أرمل</span>
                                    </t>
                                    <t t-if="employee_info.marital=='divorced'">
                                        <span>مطلّق</span>
                                    </t>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border:2px solid black;vertical-align:middle;text-align:right;font-size:18px;padding-right: 10px;">
                                    <span>الملاحظات :</span>
                                    <span t-esc="employee_evaluee.observation"/>
                                </td>
                                <td style="border:2px solid black;vertical-align:middle;text-align:right;font-size:18px;padding-right: 10px;">
                                    <span>العلامة :</span>
                                    <span t-esc="employee_evaluee.note"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br/>
                <div style="font-size: 20px">
                    <span style="margin-left: 300px;">توقيع الموظف المعني</span>
                    <span style="margin-left: 200px;">توقيع الرئيس السلمي</span>
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <div style="text-align:center;font-size: 20px;">
                    <span>يجوز للموظف أن يبدي وجهة نظره في العالمة الممنوحة له و ذلك في مفكرة يرفقها بهذه اإلستمارة</span>
                </div>
            </div>
        </t>
    </template>
</odoo>